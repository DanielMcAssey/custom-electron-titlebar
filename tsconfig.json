{
  "compilerOptions": {
    "lib": [
      "es2020",
      "dom"
    ],
    "baseUrl": "./src",
    "paths": {
      "vs/*": [
        "./vs/*"
      ]
    },
    "module": "commonjs",
    // "noEmit": true,
    "target": "es2019",
    "declaration": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "./node_modules",
    "**/node_modules/*"
  ]
}
